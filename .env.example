# Literature Monitor Environment Variables
# Copy this to .env and fill in your values

# NCBI API Key (optional but recommended)
# Get one at: https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY=

# Email for NCBI to contact if there are issues
NCBI_EMAIL=your@email.com

# Claude API Key (required for ranking)
ANTHROPIC_API_KEY=

# Email settings (for digest delivery)
EMAIL_TO=your@email.com
EMAIL_FROM=lit-monitor@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Zotero Integration (optional)
# Get API key at: https://www.zotero.org/settings/keys
ZOTERO_API_KEY=
ZOTERO_USER_ID=

# Cloudflare Worker settings
# ZOTERO_WORKER_URL is the deployed worker URL (e.g., https://lit-monitor-zotero.username.workers.dev)
ZOTERO_WORKER_URL=

# Signing secret for secure Zotero links (generate with: openssl rand -hex 32)
# IMPORTANT: This must match the SIGNING_SECRET in your Cloudflare Worker
SIGNING_SECRET=

# Capacities Integration (optional)
# Get API token at: Settings > Capacities API in the desktop app
CAPACITIES_API_TOKEN=
# Find Space ID at: Settings > Space settings in the desktop app
CAPACITIES_SPACE_ID=
